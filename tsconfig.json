{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2020",
    "lib": ["es2020", "es6", "DOM"],
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "paths": {
      "~src/*": ["src/*"],
      "~__test__/*": ["__test__/*"]
    }
  },
  "include": ["./src/**/*", "./__test__/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
